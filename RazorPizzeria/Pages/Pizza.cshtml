@page
@model RazorPizzeria.Pages.Pizza

@{
}



<div class="text-center">
	<div class="container">
		<div class="row">
			<div class="col-12 mb-5 mt-5">
				<div class="w-70 row makeYourOwnDiv">
					<div class="col-4">
						<img src="/Images/Pizzas/Create.png" class="w-100" alt="" />
					</div>
					<div class="col-7 align-items-center ">
						<div class="align-items-center makeYourOwnText">
							<h3 style="text-align:left;"> Зібрати валсну піцу</h3>
							<a class="btn btn-primary" style="float: left" asp-area="" asp-page="Forms/CustomPizza">Спробувати</a>
						</div>
					</div>
				</div>
			</div>

			@foreach (var pizza in Model.fakePizzaDB)
			{
				var imagePath = "~/images/Pizzas/" + pizza.ImageTitle + ".png";
				<div class="col-4 mb-5">
					<a class="pizza-img" asp-area="" asp-page="Checkout/Checkout"
					asp-route-ImageTitle="@pizza.ImageTitle"
					asp-route-PizzaName="@pizza.PizzaName"
					asp-route-PizzaPrice="@pizza.FinalPrice">
						<img src="@imagePath" class="w-100 border-img" asp-append-version="true" />
					</a>
					<br />
				</div>
			}

		</div>
	</div>
</div>